<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Star Sports GitHub Player</title>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/shaka-player/4.7.11/shaka-player.ui.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/shaka-player/4.7.11/controls.min.css">

  <style>
    body {
      margin: 0;
      background: #000;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      overflow: hidden;
    }
    #video-container {
      width: 90vw;
      max-width: 1280px;
      aspect-ratio: 16/9;
    }
    video {
      width: 100%;
      height: 100%;
      background: black;
    }
  </style>
</head>
<body>

  <div id="video-container">
    <video id="video" autoplay playsinline></video>
  </div>

  <script>
    async function initPlayer() {
      shaka.polyfill.installAll();
      if (!shaka.Player.isBrowserSupported()) {
        console.error("Browser not supported");
        return;
      }

      const video = document.getElementById("video");
      const player = new shaka.Player(video);

      new shaka.ui.Overlay(player, document.getElementById("video-container"), video);

      let cookieHeader = "__hdnea__=st=1759751405~exp=1759837805~acl=/*~hmac=be0a77ab3649dfd1c57f6c0801fad8aa319a16d2063f18fdb21ebe43c043f7bf";

      let drmConfig = {
        clearKeys: {
          "bd1ea6a1c1fb5dcdb709434e0826bbc0": "f57f22cba32739ce7beb1fab3f3d060b"
        }
      };

      player.configure({
        drm: drmConfig
      });

      player.getNetworkingEngine().registerRequestFilter((type, request) => {
        request.headers["Referer"] = "https://www.jiotv.com/";
        request.headers["User-Agent"] = "plaYtv/7.1.5 (Linux;Android 13)";
        request.headers["Cookie"] = cookieHeader;
      });

      const URL = "https://jiotvpllive.cdn.jio.com/bpk-tv/Sports18_1_HD_BTS/output/index.mpd";

      try {
        await player.load(URL);
        console.log("Loaded!");
      } catch (err) {
        console.error("Load Error:", err);
      }
    }

    document.addEventListener("DOMContentLoaded", initPlayer);
  </script>

</body>
</html>
